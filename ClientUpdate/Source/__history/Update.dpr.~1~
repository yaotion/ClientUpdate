program Update;

uses
  Forms,
  SysUtils,
  Windows,
  uLogs in '功能单元\日志\uLogs.pas',
  uFrmUpdate in '功能窗口\客户端升级\uFrmUpdate.pas' {FrmUpdate},
  uAutoUpdate in '数据定义\uAutoUpdate.pas';

{$R *.res}
var
  HMutex : DWord;
begin
  HMutex := CreateMutex(nil, True, 'TF_Update'); //创建Mutex句柄
  {-----检测Mutex对象是否存在，如果存在，退出程序------------}
  if (GetLastError = ERROR_ALREADY_EXISTS) then
  begin
    ReleaseMutex(hMutex); //释放Mutex对象
    Exit;
  end;
  TimeSeparator := ':';
  DateSeparator := '-';
  ShortDateFormat := 'yyyy-mm-dd';
  ShortTimeFormat := 'hh:nn:ss';
  //ReportMemoryLeaksOnShutdown := DebugHook <> 0;
  Application.Initialize;
  Application.Title := '客户端升级';
  begin
    try
      TFrmUpdate.ShowForm;
    except on e : exception do
    end;
  end;
  Application.Run;
  Application.Terminate;
end.
